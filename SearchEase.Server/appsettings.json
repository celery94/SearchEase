{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Indexing": {
    "IndexPath": "LuceneIndex",
    "FolderToIndex": "${HOME}/Documents",
    "IndexingIntervalSeconds": 300,
    "FileExtensionsToIndex": [
      ".txt",
      ".md",
      ".json",
      ".xml",
      ".docx",
      ".doc",
      ".pdf"
    ],
    "MaxSnippetLength": 150
  }
}